@model Inventory.Models.Customer
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table id="example2" class="table table-bordered">
    <tr><td><div class="form-horizontal">
                <div class="col-md-12">
                    <div class="box box-primary">
                        <div class="box-body" style="border:groove">
                            <strong>SEARCH</strong>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-1" })
                                <div class="col-md-2">
                                    @Html.TextBoxFor(model => model.Name, new { @style = "width:900px;height:25px" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Name, "Contact", new { @class = "control-label col-md-1" })
                                <div class="col-md-2">
                                    @Html.TextBoxFor(model => model.ContactName, new { @style = "width:900px;height:25px" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Phone, new { @class = "control-label col-md-1" })
                                <div class="col-md-2">
                                    @Html.TextBoxFor(model => model.Phone, new { @style = "width:900px;height:25px" })
                                    <br /><br />
                                    <input type="button" value="Refresh" class="bg-blue" />
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
</div>
  
</td></tr>
    <tr><td><div class="row">
                <div class="col-md-12">
                    <div class="box box-primary">
                        <div class="box-body" style="border:groove">
                            <table id="example2" class="table table-bordered" >
                                <tr>
                                    <td><strong>Name</strong></td>
                                    <td><strong>Contact</strong></td>
                                    <td><strong>Phone</strong></td>
                                    <td><strong>Email</strong></td>
                                    <td><strong>Website</strong></td>
                                    <td><strong>Address1</strong></td>
                                    <td><strong>Address2</strong></td>
                                    <td><strong>City</strong></td>
                                    <td><strong>State/Province</strong></td>
                                    <td><strong>Zip Code</strong></td>
                                    <td><strong>Country</strong></td>

                                </tr>
                                @foreach (var item in Model.CustomerList)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@item.ContactName</td>
                                        <td>@item.Phone</td>
                                        <td>@item.Email</td>
                                        <td>@item.WebSite</td>
                                        <td>@item.Address1</td>
                                        <td>@item.Address2</td>
                                        <td>@item.City</td>
                                        <td>@item.State</td>
                                        <td>@item.PostalCode</td>
                                        <td>@item.Country</td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                </div>
</div></td></tr>
</table>
   
      





