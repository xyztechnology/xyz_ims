@model Inventory.Models.SalesOrder

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="form-horizontal">
        <div class="col-md-12">
            <strong>Search</strong>
            <div class="form-group">
                @Html.LabelFor(model => model.OrderNumber, new { @class = "control-label col-md-2" })
                <div class="col-md-2">
                    @Html.TextBoxFor(model => model.OrderNumber, new { @style = "width:700px;height:25px" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.PaymentStatus, new { @class = "control-label col-md-2" })
                <div class="col-md-2">
                    @Html.TextBoxFor(model => model.PaymentStatus, new { @style = "width:700px;height:25px" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Customer, new { @class = "control-label col-md-2" })
                <div class="col-md-2">
                    @Html.TextBoxFor(model => model.Customer, new { @style = "width:700px;height:25px" })<br /><br />
                    <input type="button" value="Refresh" class="bg-blue" />
                </div>
            </div>


        </div>
       
           

     
