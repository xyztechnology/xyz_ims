@model Inventory.Models.Customer


@using (Ajax.BeginForm("CreateUpdate", "Customer", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "SearchResult", InsertionMode = InsertionMode.Replace, OnBegin = "ClearList" }))
    {

  @Html.AntiForgeryToken()
@Html.HiddenFor(m => m.CustomerId)
    
<div class="form-horizontal">
    <div class="row">
        <div class="col-md-12">

            <div class="col-md-4">
                <strong>BASIC</strong>
                <div class="form-group">
                    @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-3" })
                    <div class="col-md-1">
                        @Html.EditorFor(model => model.Name)
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Name,"CONTACT" ,new { @class = "control-label col-md-3" })
                    
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ContactName, new { @class = "control-label col-md-3" })
                    <div class="col-md-1">
                        @Html.TextBoxFor(model => model.ContactName)

                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Phone, new { @class = "control-label col-md-3" })
                    <div class="col-md-1">
                        @Html.TextBoxFor(model => model.Phone)
                        @Html.ValidationMessageFor(model => model.Phone)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Fax, new { @class = "control-label col-md-3" })
                    <div class="col-md-1">
                        @Html.TextBoxFor(model => model.Fax)
                        @Html.ValidationMessageFor(model => model.Fax)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-3" })
                    <div class="col-md-1">
                        @Html.EditorFor(model => model.Email)
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.WebSite, new { @class = "control-label col-md-3" })
                    <div class="col-md-1">
                        @Html.EditorFor(model => model.WebSite)
                        @Html.ValidationMessageFor(model => model.WebSite)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Remarks, new { @class = "control-label col-md-3" })
                    <div class="col-md-1">
                        @Html.EditorFor(model => model.Remarks)
                        @Html.ValidationMessageFor(model => model.Remarks)
                    </div>
                </div>
                <div class="row">
                    <div style="padding-left:130px">
                        <br /> <input type="submit" value="Save" class="bg-blue" />
                    </div>
                </div>

            </div>
            <div class="col-md-4">
                <strong style="float:right">ADDRESSES</strong><br /><br />
                <div class="form-group">
                    @Html.LabelFor(model => model.Name,"Street", new { @class = "control-label col-md-3" })
                    <div class="col-md-1">
                        @Html.TextBoxFor(model => model.Name, new { @style = "width:400px;height:23px" })
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Address1,"Place", new { @class = "control-label col-md-3" })
                    <div class="col-md-1">
                        @Html.EditorFor(model => model.Address1)
                 
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.City, new { @class = "control-label col-md-3" })
                    <div class="col-md-1">
                        @Html.EditorFor(model => model.City)

                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Country, new { @class = "control-label col-md-3" })
                    <div class="col-md-1">
                        @Html.EditorFor(model => model.Country)
                        @Html.ValidationMessageFor(model => model.Country)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Remarks, new { @class = "control-label col-md-3" })
                    <div class="col-md-1">
                        @Html.TextAreaFor(model => model.Remarks, new { @style = "width:250px;height:60px" })
                        @Html.ValidationMessageFor(model => model.Remarks)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.DefaultLocationId,"Location", new { @class = "control-label col-md-3" })
                    <div class="col-md-1">
                        @Html.DropDownListFor(model => model.DefaultLocationId,Utility.GetLocation(),"Select")
                       
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <br />
                <br /><br />
                <div class="form-group">
                    <br />
                    @Html.LabelFor(model => model.State, new { @class = "control-label col-md-4" })
                    <div class="col-md-1">
                        @Html.EditorFor(model => model.State)
                        @Html.ValidationMessageFor(model => model.State)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.PostalCode, new { @class = "control-label col-md-4" })
                    <div class="col-md-1">
                        @Html.EditorFor(model => model.PostalCode)
                        @Html.ValidationMessageFor(model => model.PostalCode)
                    </div>
                </div>
            </div>


            
        </div>
    </div>
</div>
    
    
}