@model Inventory.Models.Product

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <table id="example2" class="table table-bordered table-hover" style="background-color: #D5D4D3">
        <tr>
            <td><div class="form-horizontal">
                    <strong>SEARCH</strong>

            @using (Html.BeginForm("SearchProductList", "Product"))
            {
                 <div class="col-md-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, "Item Name", new { @class = "control-label col-md-2" })
                        <div class="col-md-2">
                            @Html.TextBoxFor(model => model.Name, new { @style = "width:700px;height:25px" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.ProductCode, "Item Code", new { @class = "control-label col-md-2" })
                        <div class="col-md-2">
                            @Html.TextBoxFor(model => model.ProductCode, new { @style = "width:700px;height:25px" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.CategoryId, "Catogory", new { @class = "control-label col-md-2" })
                        <div class="col-md-2">
                            @Html.DropDownListFor(m => m.CategoryId, Utility.GetProductCategory(), "Select", new { @style = "width:700px;height:25px" })
                            <br /><br />
                            <input type="submit" value="Search" class="bg-blue" />
                        </div>
                    </div>
                </div>
            }
        </div>
            
      </td>
        </tr>
        <tr>
            <td>
                <div class="row">
                    <div class="col-md-12">
                        <table id="example2" class="table table-bordered table-hover" style="background-color: #D5D4D3">
                            <tr>
                                <td><strong>Item</strong></td>
                                <td><strong>Type</strong></td>
                                <td><strong>Category</strong></td>
                                <td><strong>Normal Price</strong></td>
                                <td><strong>Vendor</strong></td>

                            </tr>
                        @foreach (var item in Model.ProductList)
                            {

                            <tr>
                                <td>@item.Name</td>
                                <td>@item.ItemType</td>
                                <td>@item.ProdCategory</td>
                                <td>@item.UnitPrice</td>
                                <td>@item.Vendor</td>

                            </tr>
                        }
                        </table>
                    </div>
                </div>
            </td>
        </tr>
    </table>
</div>


        
